[DEFAULT]
# AUTHENTICATION
auth_strategy = keystone

# LOGS/STATE
verbose = True
logdir = /var/log/nova
state_path = /var/lib/nova
lock_path = /var/lib/nova/tmp
rootwrap_config = /etc/nova/rootwrap.conf

# SCHEDULER
compute_scheduler_driver = nova.scheduler.filter_scheduler.FilterScheduler

# VOLUMES
volume_driver = nova.volume.driver.ISCSIDriver
volume_group = vg_kvm3134
volume_name_template = volume-%s
iscsi_helper = tgtadm

# DATABASE
sql_connection = mysql://nova:nova@localhost/nova

# COMPUTE
#libvirt_type = kvm
libvirt_type = qemu
#connection_type  = libvirt
compute_driver = libvirt.LibvirtDriver
instance_name_template = instance-%08x
api_paste_config = /etc/nova/api-paste.ini
allow_resize_to_same_host = True

# APIS
osapi_compute_extension = nova.api.openstack.compute.contrib.standard_extensions
ec2_dmz_host = 192.168.100.1
s3_host = 192.168.100.1

# rabbitmq
rabbit_host = localhost
rabbit_userid = guest
rabbit_password = online

# GLANCE
image_service = nova.image.glance.GlanceImageService
glance_api_servers = 192.168.100.1:9292

# NETWORK
network_manager = nova.network.manager.FlatDHCPManager
#network_manager = nova.network.manager.FlatManager
force_dhcp_release = True
#force_dhcp_release = False
dhcpbridge_flagfile = /etc/nova/nova.conf
#dhcpbridge = /usr/bin/nova-dhcpbridge
firewall_driver = nova.virt.libvirt.firewall.IptablesFirewallDriver
# Change my_ip to match each host
my_ip = 192.168.100.1
public_interface = eth0
#vlan_interface = eth0
flat_network_bridge = br100
flat_interface = eth0
#fixed_range = 202.194.7.0/25
#fixed_range = 192.168.100.0/24
fixed_range = 10.0.0.0/24
#floating_range = 192.168.100.0/24
#flat_injected = False
flat_network_dns = 202.194.15.12

# NOVNC CONSOLE
novncproxy_base_url = http://192.168.100.1:6080/vnc_auto.html
# Change vncserver_proxyclient_address and vncserver_listen to match each
# compute host
vncserver_proxyclient_address = 192.168.100.1
vncserver_listen = 192.168.100.1
#libvirt_inject_partition = -1
#libvirt_cpu_mode = host_model
# identify the CPU model in /usr/share/libvirt/cpu_map.xml

[keystone_authtoken]
admin_tenant_name = service
admin_user = nova
admin_password = nova
auth_host = 127.0.0.1
auth_port = 35357
auth_protocol = http
signing_dir = /tmp/keystone-signing-nova
